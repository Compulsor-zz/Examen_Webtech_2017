package edu.gd.rest;

import org.restlet.resource.ClientResource;

import edu.gd.file.QuoteFile;

public class QuotesClient {

    // http://hc.apache.org/
     public static void main(String[] args) {
           
             try {
            	ClientResource resource = new ClientResource("http://127.0.0.1:8181/quotes/quotes");
            	
        		String content = QuoteFile.readFile();
        		resource.post(content);
            	
            	// Write the response entity on the console
            	resource.get().write(System.out);
            	System.out.println();
            	
            	System.out.println(QuoteFile.readFile());
            }
            catch (Exception e) {
                System.out.println("In main : " + e.getMessage());
            }
        }
    }
